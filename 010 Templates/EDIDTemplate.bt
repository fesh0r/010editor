local ubyte ext_tag;
for (i = 0; i < e.ext_blocks; i++) {
    SetBackColor(0xa0e0a0);
    ext_tag = ReadUByte(FTell());
    
    switch (ext_tag) {
        case 2:
            E_CEA ext;
            break;
        case 0x70:
            E_DID ext;
            break;
        default:
            E_UNKNOWN ext;
            break;
    }
}
