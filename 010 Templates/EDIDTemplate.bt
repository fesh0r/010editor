string READ_gamma(ubyte in) {
    string out;
    SPrintf(out, "%0.2f", (double)in / 100.0 + 1.0);
    return out;
}

int WRITE_gamma(ubyte &out, string in) {
    double value;
    value = Atof(in);
    if (value != 0 && value >= (0.0 / 100.0 + 1.0) && value < (256.0 / 100.0 + 1.0)) {
        out = (ubyte)((value - 1) * 100);
        return 0;
    }
    else {
        return -1;
    }
}

