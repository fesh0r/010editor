		}
		SetBackColor(0xb0b0e0);
		UINT16 end;
		FSeek(pos);
	}
} EFI_STRING_OFFSET <read=read_EFI_STRING_OFFSET>;

string read_EFI_STRING_OFFSET(EFI_STRING_OFFSET &in) {
	if (in.Offset) {
		return WStringToUTF8(in.name);
	}
	else {
		return "";
	}
}


