	else {
		local UINT32 OffsetToCapsuleBody = 0;
	}
} EFI_CAPSULE_HEADER <read=read_EFI_CAPSULE_HEADER>;

string read_EFI_CAPSULE_HEADER(EFI_CAPSULE_HEADER &in) {
